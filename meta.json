{
    "questions": {
        "projectName": {
            "type": "input",
            "name": "projectName",
            "message": "project name:",
            "default": "new-project"
        },
        "description": {
            "type": "input",
            "name": "description",
            "message": "description for this project:",
            "default": "a project build by choice"
        },
        "author": {
            "type": "input",
            "name": "author",
            "message": "author",
            "default": "tian"
        },
        "mode": {
            "type": "list",
            "message": "choose scaffold mode",
            "name": "mode",
            "choices": [
                {
                    "name": "React",
                    "value": "react"
                },
                {
                    "name": "Vue",
                    "value": "vue"
                },
                {
                    "name": "Simple",
                    "value": "simple"
                }

            ]
        },
        "filters": {
            "vue": [
                "src/actions/",
                "src/pages/",
                "src/reducers/",
                "src/router.jsx",
                "src/app.jsx",
                "src/App.vue",
                "src/store.js"
            ],
            "react": [
                "src/main.js"
            ]
        }
    }

}